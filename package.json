{
  "name": "sweet-scroll",
  "version": "0.7.1",
  "description": "Modern and the sweet smooth scroll library.",
  "main": "sweet-scroll.js",
  "scripts": {
    "start": "gulp start",
    "test": "npm run lint && npm run karma",
    "build": "npm run build:js",
    "build:js": "NODE_ENV=production rollup -i src/sweet-scroll.js -o sweet-scroll.js -c && uglifyjs --compress --mangle -o sweet-scroll.min.js --comments -- sweet-scroll.js",
    "lint": "npm run eslint",
    "karma": "NODE_ENV=test karma start karma.conf.js --single-run",
    "eslint": "eslint src/**/*.js test/**/*.js"
  },
  "files": [
    "sweet-scroll.js",
    "sweet-scroll.min.js"
  ],
  "keywords": [
    "smooth scroll",
    "scroll",
    "animation"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/tsuyoshiwada/sweet-scroll.git"
  },
  "author": "tsuyoshiwada",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tsuyoshiwada/sweet-scroll/issues"
  },
  "homepage": "https://github.com/tsuyoshiwada/sweet-scroll",
  "devDependencies": {
    "babel-eslint": "^6.0.4",
    "babel-plugin-espower": "^2.1.2",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-es2015-rollup": "^1.1.1",
    "babel-preset-stage-0": "^6.5.0",
    "babelify": "^7.3.0",
    "browser-sync": "^2.12.8",
    "browserify": "^13.0.1",
    "eslint": "^2.10.2",
    "karma": "^0.13.22",
    "karma-browserify": "^5.0.5",
    "karma-cli": "^1.0.0",
    "karma-fixture": "^0.2.6",
    "karma-html2js-preprocessor": "^1.0.0",
    "karma-mocha": "^1.0.1",
    "karma-phantomjs-launcher": "^1.0.0",
    "karma-phantomjs-shim": "^1.4.0",
    "mocha": "^2.4.5",
    "phantomjs-prebuilt": "^2.1.7",
    "power-assert": "^1.4.1",
    "rollup": "^0.26.3",
    "rollup-plugin-babel": "^2.4.0",
    "uglify-js": "^2.6.2",
    "watchify": "^3.7.0"
  }
}
