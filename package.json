{
  "name": "sweet-scroll",
  "version": "2.2.1",
  "description": "Modern and the sweet smooth scroll library.",
  "main": "sweet-scroll.js",
  "scripts": {
    "start": "echo \"todo: start\"",
    "build": "npm run build:bundle && npm run build:decls",
    "build:bundle": "rollup -c",
    "build:decls": "dts-bundle --baseDir ./ --name sweet-scroll --main .decls/index.d.ts",
    "clean": "rimraf .decls .rpt2_cache",
    "test": "npm run test:lint && npm run test:unit",
    "test:unit": "jest",
    "test:lint": "eslint \"src/**/*.js\"",
    "test:watch": "npm run test:unit -- --watch",
    "docs": "echo \"todo: docs\""
  },
  "files": [
    "sweet-scroll.js",
    "sweet-scroll.min.js"
  ],
  "keywords": [
    "smooth scroll",
    "scroll",
    "animation"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/tsuyoshiwada/sweet-scroll.git"
  },
  "author": "tsuyoshiwada",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tsuyoshiwada/sweet-scroll/issues"
  },
  "jest": {
    "rootDir": "src/",
    "testMatch": [
      "**/__tests__/**/*.spec.js?(x)"
    ]
  },
  "homepage": "https://github.com/tsuyoshiwada/sweet-scroll",
  "devDependencies": {
    "autoprefixer": "^7.0.1",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.1",
    "babel-preset-stage-1": "^6.24.1",
    "browser-sync": "^2.18.8",
    "dts-bundle": "^0.7.3",
    "eslint": "^4.11.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jest": "^21.3.2",
    "jest": "^21.2.1",
    "node-sass": "^4.5.2",
    "postcss-cli": "^4.0.0",
    "rimraf": "^2.6.2",
    "rollup": "^0.41.6",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-plugin-typescript2": "^0.8.2",
    "sass-loader": "^6.0.6",
    "typescript": "^2.6.1",
    "webpack": "^3.8.1"
  }
}
